# Data-Diff N8N 环境变量配置示例
# 复制此文件为 .env.dev 并修改为您的实际配置

# 数据库配置
DATABASE_URL=postgresql://your_user:your_password@your_host:5432/your_db
POSTGRES_DB=postgres
POSTGRES_USER=your_user
POSTGRES_PASSWORD=your_password

# N8N 配置
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=your_admin_user
N8N_BASIC_AUTH_PASSWORD=your_secure_password
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_PATH=/n8n/

# API 配置
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# 环境类型
ENVIRONMENT=development

# Redis 配置 (如果使用)
REDIS_URL=redis://redis:6379/0

# 应用配置
APP_NAME=data-diff-n8n
DEBUG=false
WORKERS=4

# Webhook配置
WEBHOOK_URL=http://n8n:5678/webhook
N8N_WEBHOOK_URL=http://n8n:5678/webhook-test

# API URLs
DATABASE_API_URL=http://data-diff-api:8000/api/v1/connections/test
DATABASE_SCHEMA_API_URL=http://data-diff-api:8000/api/v1/tables/list

# 监控配置
GF_SECURITY_ADMIN_USER=your_grafana_user
GF_SECURITY_ADMIN_PASSWORD=your_grafana_password
GF_INSTALL_PLUGINS=grafana-piechart-panel

# 日志配置
LOG_LEVEL=INFO

# 数据库连接（用于 maintenance_routes.py）
DB_HOST=postgres
DB_PORT=5432
DB_NAME=datadiff
DB_USER=postgres
DB_PASSWORD=your_password